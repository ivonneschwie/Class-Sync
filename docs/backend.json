{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "type": "object",
      "description": "Represents a user's profile.",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "description": "User's email address."
        },
        "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp of when the user account was created."
        }
      },
      "required": ["email", "createdAt"]
    },
    "Class": {
      "title": "Class",
      "type": "object",
      "description": "Represents a class or course for a specific user.",
      "properties": {
        "userId": { "type": "string" },
        "name": { "type": "string" },
        "code": { "type": "string" },
        "instructor": { "type": "string" },
        "location": { "type": "string" },
        "description": { "type": "string", "description": "An optional description for the class." },
        "accentColor": { "type": "string" },
        "schedule": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "days": { "type": "array", "items": { "type": "string" } },
              "startTime": { "type": "string" },
              "endTime": { "type": "string" }
            },
            "required": ["days", "startTime", "endTime"]
          }
        },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["userId", "name", "code", "instructor", "location", "schedule", "createdAt"]
    },
    "NoteSummary": {
      "title": "Note Summary",
      "type": "object",
      "description": "Represents a summarized version of lecture notes.",
      "properties": {
        "userId": { "type": "string" },
        "subject": { "type": "string" },
        "title": { "type": "string" },
        "notes": { "type": "string" },
        "summary": { "type": "string" },
        "clarificationQuestions": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["userId", "subject", "title", "notes", "summary", "createdAt"]
    },
    "FlashcardDeck": {
        "title": "Flashcard Deck",
        "type": "object",
        "description": "A collection of flashcards for a specific subject.",
        "properties": {
            "userId": { "type": "string" },
            "name": { "type": "string" },
            "subject": { "type": "string" },
            "flashcards": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "front": { "type": "string" },
                        "back": { "type": "string" }
                    },
                    "required": ["front", "back"]
                }
            },
            "createdAt": { "type": "string", "format": "date-time" }
        },
        "required": ["userId", "name", "subject", "flashcards", "createdAt"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "UserProfile",
          "schema": { "$ref": "#/entities/UserProfile" },
          "description": "Stores user profile information. Doc ID is the Firebase Auth UID."
        }
      },
      {
        "path": "/users/{userId}/classes/{classId}",
        "definition": {
          "entityName": "Class",
          "schema": { "$ref": "#/entities/Class" },
          "description": "Stores classes created by a specific user."
        }
      },
      {
        "path": "/users/{userId}/summaries/{summaryId}",
        "definition": {
          "entityName": "NoteSummary",
          "schema": { "$ref": "#/entities/NoteSummary" },
          "description": "Stores note summaries created by a specific user."
        }
      },
      {
        "path": "/users/{userId}/decks/{deckId}",
        "definition": {
          "entityName": "FlashcardDeck",
          "schema": { "$ref": "#/entities/FlashcardDeck" },
          "description": "Stores flashcard decks created by a specific user."
        }
      }
    ]
  }
}
